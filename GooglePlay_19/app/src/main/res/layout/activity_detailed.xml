<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wjh.org.googleplay_19.activity.DetailedActivity">

    <!--应用底部下载按钮部分-->
    <FrameLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/detailed_fl_download"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        />

    <!--使用容器把下面这四个部分包裹起来-->
    <ScrollView
        android:id="@+id/detailed_fl_scrollview"
        android:layout_above="@id/detailed_fl_download"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!--应用详情部分-->
            <FrameLayout
                android:id="@+id/detailed_fl_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <!--应用安全部分-->
            <FrameLayout
                android:id="@+id/detailed_fl_safe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <!--应用截图部分-->
            <FrameLayout
                android:id="@+id/detailed_fl_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <!--应用描述部分-->
            <FrameLayout
                android:id="@+id/detailed_fl_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
